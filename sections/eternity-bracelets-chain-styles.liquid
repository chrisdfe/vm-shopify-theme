<div class="content-section content-section--eternity-bracelets-chain-styles">
  <div class="container">
    <div class="row">

      <div class="ten columns medium-down--one-whole">
        <div class="eternity-bracelets__content-wrapper">
          {% include "content-section.title" with {
            title: section.settings.title | escape,
          } %}
          
          <p class="paragraph--block-text">
            {{ section.settings.content }}
          </p>

          <div class="eternity-bracelets__chain-style-list">
            {% for block in section.blocks %}
              <div class="eternity-bracelets__chain-style">
                <h4>{{ block.settings.title }}{% if block.settings.is_fancy%}*{% else %}{% endif %}</h4>
                <div class="dots-spacer"></div>
                <h3>${{ block.settings.price }}</h3>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>

      <div class="six columns medium-down--one-whole">
        <div class="eternity-bracelets__image-wrapper">
          {{ section.settings.image | img_url: 'x500' | img_tag }}
        </div>
        <img>
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Chain Styles",
  "settings": [
    {
      "id": "title",
      "label": "Title",
      "type": "text",
      "default": "Available Chain Styles"
    },
    {
      "id": "content",
      "label": "Content",
      "type": "textarea",
      "default": "1mm Cable Chain is available in all metal colors, fancy styles must be pre-ordered - contact us!"
    },
    {
      "id": "image",
      "label": "Image",
      "type": "image_picker"
    }
  ],
  "blocks": [
    {
      "type": "chain_style",
      "name": "Chain Style",
      "settings": [
        {
          "id": "title",
          "label": "Name",
          "type": "text"
        },
        {
          "id": "price",
          "label": "Price (in dollars)",
          "type": "text"
        },
        {
          "id": "is_fancy",
          "label": "Is it fancy?",
          "type": "checkbox"
        }
      ]
    }
  ]
}
{% endschema %}