{% comment %}
** Team page - custom view **
- Page template
- Uses blocks
{% endcomment %}

<a name="pagecontent" id="pagecontent"></a>
{% comment %}
{% if page.title %}
  <div class="sixteen columns page clearfix">
    <h1>
      {{ page.title }}
    </h1>
    <div class="feature_divider"></div>
  </div>
{% endif %}
{% endcomment %}
{% if section.settings.image != blank or section.settings.text != blank or section.settings.title != blank %}
  <div class="new-team-top content-section">
    <div class="container">
      <div class="sixteen columns">
        <div class="team-page__content--{{ section.settings.image_position }} {% if section.settings.image != blank and section.settings.text != blank %}teamPage__content--multiple{% endif %}">
          {% if section.settings.image != blank %}
            <div class="team-page__image">
              {% render 'image-element',
                      image: section.settings.image,
                      alt: section.settings.image.alt,
                      progressive: true
              %}
            </div>
          {% endif %}
        </div>

          {% if section.settings.text != blank or section.settings.title != blank %}
            <div class="team-page__text text-align--{{ section.settings.text_position }}">
              <span class="team-page__container">
                {% if section.settings.title %}
                  <h2 class="heading--with-accent">{{ section.settings.title }}</h2>
                {% endif %}
                
                {% if section.settings.text %}
                  {{ section.settings.text }}
                {% endif %}
              </span>
            </div>
          {% endif %}
      </div>
    </div>
  </div>
{% endif %}

<div class="section">
  <div class="sixteen columns new-team-bottom">
    {% if section.settings.image != blank or section.settings.text != blank or section.settings.title != blank %}
      <hr class="feature_divider">
    {% endif %}

    <div class="row team-members equal-columns--clear">
    {% for block in section.blocks %}
        {% capture name %}{{ block.settings.title }}{% endcapture %}
        {% capture twitter_handle %}{{ block.settings.twitter }}{% endcapture %}
        {% capture title %}{{ block.settings.job_title }}{% endcapture %}
        {% capture description %}{{ block.settings.description }}{% endcapture %}

        {% if section.settings.employee_per_row == 2 %}
          {% assign perRow = 'eight columns' %}
          {% capture alphaOmegaCycle %}
            {% cycle 'alpha', 'omega' %}
          {% endcapture %}
        {% elsif section.settings.employee_per_row == 3 %}
          {% assign perRow = 'one-third column' %}
          {% capture alphaOmegaCycle %}
            {% cycle 'alpha', '', 'omega' %}
          {% endcapture %}
        {% else %}
          {% assign perRow = 'four columns' %}
          {% capture alphaOmegaCycle %}
            {% cycle 'alpha', '', '', 'omega' %}
          {% endcapture %}
        {% endif %}

        <div class="{{ perRow }} {{ alphaOmegaCycle }} team-member__profile">
          <div class="team-member__wrap">
            {% if block.settings.image %}
              {% render 'image-element',
                      image: block.settings.image,
                      alt: block.settings.image.alt
              %}
            {% else %}
              {% capture i %}{% cycle "1", "2", "3", "4", "5", "6" %}{% endcapture %}
              {{ 'collection-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}

            <div class="team-member__overlay">
              <div class="team-member__details">
 
                <h3 class="team-member__name no_border">{{ name }}</h3>
                {% if title != blank %}
                <h5 class="team-member__title heading--with-accent">{{title}}</h5>
                {% endif %}
                
                {% if description != blank %}
                  <p class="paragraph-3">{{ description | strip_html }}</p>
                {% endif %}
                {% if twitter_handle != blank %}
                  <a class="team-twitter" href="https://twitter.com/{{twitter_handle}}">
<!--                     <span class="icon-twitter"></span> -->
                    @{{twitter_handle}}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        {% if section.settings.employee_per_row == 2 %}
          {% cycle '', '<br class="clear product_clear" />' %}
        {% elsif section.settings.employee_per_row == 3 %}
          {% cycle '', '', '<br class="clear product_clear" />' %}
        {% else %}
          {% cycle '', '', '', '<br class="clear product_clear" />' %}
        {% endif %}
    {% endfor %}
  </div>
</div>
</div>

{% schema %}

{
  "name": "Page | team",
  "class": "team-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Meet the team"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Say a little something about your team here, tell the story of how you got together, describe what roles people play, and help your customers get to know you better! All your staff members can be listed below, with their respective photos, job titles, descriptions or mini-bios, and Twitter handles.</p>"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text alignment",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Employees"
    },
    {
      "type": "range",
      "id": "employee_per_row",
      "label": "Images per row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "color",
      "id": "member_color",
      "label": "Text",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "member_accent_color",
      "label": "Accent",
      "default": "#d54d4d"
    },
    {
      "type": "color",
      "id": "member_overlay_color",
      "label": "Team Info BG",
      "default": "#000"
    }
  ],
  "blocks": [
    {
      "name": "Employee",
      "type": "employee",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "800 x 800px recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Name",
          "default": "Demo Name"
        },
        {
          "type": "text",
          "id": "job_title",
          "label": "Job title",
          "default": "New job title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>New demo description.</p>"
        },
        {
          "type": "text",
          "id": "twitter",
          "label": "Twitter handle",
          "default": "Shopify"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "employee",
        "settings": {
          "title": "Demo Name",
          "job_title": "New job title",
          "description": "<p>New demo description.</p>",
          "twitter": "Shopify"
        }
      },
