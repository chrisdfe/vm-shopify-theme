{% include "header.mega-menu" with {
  menu_number: 1
} %}

{% schema %}

{
  "name": "Mega menu 1",
  "class": "mega-menu-section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "parent",
      "label": "Link title",
      "info": "The mega menu will appear below this parent link"
    }
  ],
  "blocks": [
    {
      "type": "nav_link_list",
      "name": "Nav Link List",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "link_list",
          "id": "link_list",
          "label": "Menu"
        },
        {
          "type": "checkbox",
          "id": "show_view_all_link",
          "label": "Show 'View All' link?"
        },
        {
          "type": "url",
          "id": "view_all_url",
          "label": "View All URL"
        },
        {
          "type": "select",
          "id": "columns_desktop",
          "label": "Column span (desktop)",
          "options": [
            {
              "value": "1",
              "label": "1"
            },
            {
              "value": "2",
              "label": "2"
            },
            {
              "value": "3",
              "label": "3"
            },
            {
              "value": "4",
              "label": "4"
            },
            {
              "value": "6",
              "label": "6"
            }
          ],
          "default": "1"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Url (both CTA & image will be clickable)"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text"
        },
        {
          "type": "text",
          "id": "cta_subtext",
          "label": "CTA Subtext"
        },
        {
          "type": "select",
          "id": "columns_desktop",
          "label": "Column span (desktop)",
          "options": [
            {
              "value": "1",
              "label": "1"
            },
            {
              "value": "2",
              "label": "2"
            },
            {
              "value": "3",
              "label": "3"
            },
            {
              "value": "4",
              "label": "4"
            },
            {
              "value": "6",
              "label": "6"
            }
          ],
          "default": "4"
        }
      ]
    }
  ]
}

{% endschema %}
