{% capture content %}
{% if section.settings.title != blank %}
  <div class="container">
    <div class="row">
      <div class="twelve columns offset-by-two medium-down--one-whole medium-down--offset-by-zero">
        {% include "content-section.title" with {
          title: section.settings.title | escape,
          with_accent: false,
          heading_align: "center",
          description: section.settings.description | escape,
        } %}
      </div>
    </div>
  </div>
{% endif %}

<div class="container">
  <div class="row">
        
    <div class="twelve columns offset-by-two medium-down--one-whole medium-down--offset-by-zero">
      {% if section.settings.calendly_embed != blank %}
        {{ section.settings.calendly_embed }}
      {% endif %}
    </div>

  </div>
</div>
{% endcapture %}

{% include "content-section" with {
  content: content,
  color_region: section.settings.color-region,
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
} %}

{% schema %}
{
  "name": "Calendly Embed",
  "settings": [
    {
      "id": "title",
      "label": "Title",
      "type": "text",
      "default": "Book an appointment"
    },
    {
      "id": "description",
      "label": "Description",
      "type": "textarea"
    },
    {
      "id": "calendly_embed",
      "label": "Calendly Embed code",
      "type": "html"
    },
    {
      "type": "select",
      "id": "padding_top",
      "label": "Top Padding (in spacing units)",
      "options": [
        {
          "value": "default",
          "label": "Default (5)"
        },
        {
          "value": "0",
          "label": "0"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "8",
          "label": "8"
        },
        {
          "value": "10",
          "label": "10"
        }
      ]
    },
    {
      "type": "select",
      "id": "padding_bottom",
      "label": "Bottom Padding (in spacing units)",
      "options": [
        {
          "value": "default",
          "label": "Default (5)"
        },
        {
          "value": "0",
          "label": "0"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "8",
          "label": "8"
        },
        {
          "value": "10",
          "label": "10"
        }
      ]
    }
  ]
}
{% endschema %}