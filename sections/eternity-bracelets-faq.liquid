<div class="content-section content-section--eternity-bracelets-faq">
  <div class="container">
    <div class="eight columns offset-by-four medium-down--one-whole medium-down--offset-by-zero">
      {% include "content-section.title" with {
        title: section.settings.title | escape,
      } %}
      
      {% for block in section.blocks %}
        <div class="eternity-bracelets__faq-item">
          <h4 class="eternity-bracelets__faq-item__question">
          {{ block.settings.title }}
          </h4>

          <p class="paragraph--block-text">
            {{ block.settings.answer }}
          </p>
        </div>
      {% endfor %}

    </div>
  </div>
</div>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "id": "title",
      "label": "Title",
      "type": "text",
      "default": "FAQs"
    }
  ],
  "blocks": [
  {
    "type": "faq_item",
    "name": "Frequently Asked Question",
    "settings": [
      {
        "id": "title",
        "label": "Question",
        "type": "text"
      },
      {
        "id": "answer",
        "label": "Answer",
        "type": "textarea"
      }
    ]
  }
]
}
{% endschema %}