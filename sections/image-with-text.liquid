{% capture text_content %}
  {% if section.settings.text != blank %}
    {{ section.settings.text }}
  {% endif %}

  {% if section.settings.cta_link != blank %}
    <a href="{{ section.settings.cta_link }}" class="cta-link {% if section.settings.color_region =='dark' or section.settings.color_region == 'dark_alt' %}cta-link--inverted{% endif %}">
      {{ section.settings.cta_text | default: "Read More" }}
    </a>
  {% endif %}
{% endcapture %}

{% include "content-section.image-with-text" with {
 title: section.settings.title,
 with_accent: true,
 text_content: text_content,
 image: section.settings.image,
 image_position: section.settings.image_position,
 color_region: section.settings.color_region,
 padding_top: section.settings.padding_top,
 padding_bottom: section.settings.padding_bottom,
 is_full_width: section.settings.is_full_width
 } %}

