{% assign featured_promos_per_row = section.settings.featured_promos_per_row | minus: 0 %}
{% assign title_on_image = section.settings.promo_text_on_image_enabled %}

{% capture content %}
  {% if section.settings.title %}
    <div class="container">
      <div class="row">
        <div class="sixteen columns">

          {% include "content-section.title" with {
            title: section.settings.title,
            with_accent: false
          } %}

        </div>
      </div>
    </div>
  {% endif %}
  
  <div class="container">
    <div class="row">
      {% for block in section.blocks %}
        <div class="one-third columns medium-down--one-half">
          <div data-on-intersect="appear">
            {% include "image-card" with {
              url: block.settings.link,
              image: block.settings.image,
              title: block.settings.title | strip_html
            } %}
          </div>
        </div>
      {% endfor %}

    </div>
  </div>
{% endcapture %}

{% include "content-section" with {
  title: section.settings.title,
  content: content,
  color_region: section.settings.color_region,
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
} %}

