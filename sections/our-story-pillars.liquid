{% capture content %}
<div class="container">
  
  <div class="row">
    <div class="sixteen columns">
      {% include "content-section.title" with {
        title: section.settings.title,
        heading_align: "center"
      } %}
    </div>
  </div>
  

  <div class="row">
    {% for block in section.blocks %}
      <div class="one-third columns medium-down--one-whole">
        <div class="our-story__pillar">
          <div class="our-story__pillar__image-wrapper">
            <img src="{{ block.settings.image | img_url : "300x" }}">
          </div>

          <h4>
            {{ block.settings.title }}
          </h4>

          <p>
            {{ block.settings.content }}
          </p>
        </div>
      </div>
    {% endfor %}
  </div>

</div>
{% endcapture %}

{% include "content-section" with {
  content: content,
  id: "our-story--pillars",
  color_region: "light-alt"
} %}

{% schema %}
{
  "name": "Our Pillars",
  "settings": [
    {
      "id": "title",
      "label": "Title",
      "type": "text",
      "default": "Our Pillars"
    }
  ],
  "blocks": [
    {
      "type": "pillar",
      "name": "Pillar",
      "settings": [
        {
          "id": "image",
          "label": "Image",
          "type": "image_picker"
        },
        {
          "id": "title",
          "label": "Title",
          "type": "text"
        },
        {
          "id": "content",
          "label": "Content",
          "type": "textarea"
        }
      ]
    }
  ]
}
{% endschema %}