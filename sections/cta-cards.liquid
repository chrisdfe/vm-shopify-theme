
{% capture section_content %}
  <div class="container">
    <div class="row">
      <div class="one-whole column">
        {% render "content-section.title" with {
          title: section.settings.title,
          description: section.settings.description,
          title_link: section.settings.title_link,
          title_link_text: section.settings.title_link_text,
        } %}
      </div>

      {% assign column_class = "" %}
      {% if section.settings.columns_per_row_desktop == "2" %}
        {% assign column_class = "one-half" %}
      {% else %}
        {% assign column_class = "one-third" %}
      {% endif %}

      {% for block in section.blocks %}
        <div class="{{ column_class }} medium-down--one-half columns">
          {% capture card_content %}
            <p>{{ block.settings.description }}</p>
            <a href="{{ block.settings.cta_link }}" class="cta-link">{{ block.settings.cta_text }}</a>
          {% endcapture %}

          {% render "image-card" with {
            image: block.settings.image,
            title: block.settings.title,
            card_content: card_content,
            image_aspect_ratio: section.settings.image_aspect_ratio
          } %}
        </div>
      {% endfor %}

    </div>
  </div>
{% endcapture %}

{% render "content-section" with {
  content: section_content,
  color_region: section.settings.color_region,
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
} %}

