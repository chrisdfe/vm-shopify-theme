{% comment %}
** FAQ page - custom view **
- Page template
- Uses blocks
{% endcomment %}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {% for block in section.blocks %}
      {% unless block.type == 'heading' %}
        {
          "@type": "Question",
          "name": "{{ block.settings.title | escape }}",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "{{ block.settings.subtitle | strip_html | escape }}"
          }
        }{% unless forloop.last %},{% endunless %}
      {% endunless %}
    {% endfor %}
  ]
}
</script>

{{ 'pages_faq.css' | asset_url | stylesheet_tag }}

<a name="pagecontent" id="pagecontent"></a>

<div class="page faq">

  <div class="container">
    <div class="row">
      <div class="twelve columns offset-by-two">

        <div class="page-heading">
          <h1 class="page-heading__title page-heading__title--no-accent">
            {{ page.title }}
          </h1>
        </div>

      </div>
    </div>
  </div>

  {% for block in section.blocks %}
    {% if block.type == "heading" %}
      {% unless block.first %}
        </div>
      </div>
      {% endunless %}

      <div class="content-section content-section--faq" id="{{ block.settings.heading | strip | downcase | replace: " ", "-" }}">
        <div class="container">
          <div class="row">
            <div class="twelve columns offset-by-two">
              
              {% include "content-section.title", with {
                title: block.settings.heading,
              } %}
            </div>
          </div>
    {% endif %}
        
    {% if block.settings.title != blank %}
      <div class="row faq__item">
        <div class="four columns offset-by-two">
          <h4 class="subheading-2">{{ block.settings.title }}</h4>
        </div>

        <div class="eight columns content--block-text">
          {{ block.settings.subtitle }}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

