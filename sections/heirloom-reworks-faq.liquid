{% capture content %}

<div class="container">
  <div class="row">
    <div class="twelve columns offset-by-two">

      <div class="container">
        <div class="row">
          <div class="sixteen columns">
            {% render "content-section.title" with {
              title: section.settings.title | escape,
            } %}
          </div>
        </div>
        
        {% for block in section.blocks %}
          {% render "faq--item-row" with {
            question: block.settings.title,
            answer: block.settings.answer,
            is_last_item: forloop.last == true
          } %}
        {% endfor %}
      </div>

    </div>
  </div>
</div>
{% endcapture %}

{% render "content-section" with {
  id: "faq",
  title: "faq",
  content: content,
  color_region: "light-alt"
} %}

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "id": "title",
      "label": "Title",
      "type": "text",
      "default": "FAQs"
    }
  ],
  "blocks": [
  {
    "type": "faq_item",
    "name": "Frequently Asked Question",
    "settings": [
      {
        "id": "title",
        "label": "Question",
        "type": "text"
      },
      {
        "id": "answer",
        "label": "Answer",
        "type": "textarea"
      }
    ]
  }
]
}
{% endschema %}