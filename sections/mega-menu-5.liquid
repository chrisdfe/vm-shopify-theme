{% include "header.mega-menu" with {
  menu_number: 5
} %}

{% schema %}

{
  "name": "Mega menu 5",
  "class": "mega-menu-section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "parent",
      "label": "Link title",
      "info": "The mega menu will appear below this parent link"
    },
    {
      "type": "checkbox",
      "id": "is_visible",
      "label": "Is visible?",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "nav_link_list",
      "name": "Nav Link List",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "link_list",
          "id": "link_list",
          "label": "Menu"
        },
        {
          "type": "checkbox",
          "id": "show_view_all_link",
          "label": "Show 'View All' link?"
        },
        {
          "type": "url",
          "id": "view_all_url",
          "label": "View All URL"
        },
        {
          "type": "checkbox",
          "id": "has_border",
          "label": "Display seperator line? (desktop)"
        },
        {
          "type": "select",
          "id": "columns_desktop",
          "label": "Column span (desktop)",
          "options": [
            {
              "value": "1",
              "label": "1/16"
            },
            {
              "value": "2",
              "label": "2/16 (1/8th width)"
            },
            {
              "value": "3",
              "label": "3/16"
            },
            {
              "value": "4",
              "label": "4/16 (1/4 width)"
            },
            {
              "value": "6",
              "label": "6/16"
            },
            {
              "value": "one-fifth",
              "label": "1/5 width"
            },
            {
              "value": "one-sixth",
              "label": "1/6 width"
            }
          ],
          "default": "4"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Url (both CTA & image will be clickable)"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text"
        },
        {
          "type": "text",
          "id": "cta_subtext",
          "label": "CTA Subtext"
        },
        {
          "type": "checkbox",
          "id": "has_border",
          "label": "Display seperator line? (desktop)"
        },
        {
          "type": "select",
          "id": "columns_desktop",
          "label": "Column span (desktop)",
          "options": [
            {
              "value": "1",
              "label": "1/16"
            },
            {
              "value": "2",
              "label": "2/16 (1/8th width)"
            },
            {
              "value": "3",
              "label": "3/16"
            },
            {
              "value": "4",
              "label": "4/16 (1/4 width)"
            },
            {
              "value": "6",
              "label": "6/16"
            },
            {
              "value": "one-fifth",
              "label": "1/5 width"
            },
            {
              "value": "one-sixth",
              "label": "1/6 width"
            }
          ],
          "default": "4"
        }
      ]
    }
  ]
}
{% endschema %}
