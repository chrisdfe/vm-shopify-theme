{% capture content %}
<div class="content-section content-section--how-it-works content-section--image-text-columns color-region--{{ color_region }}">
  <div class="container">
    <div class="row row--mobile-collapse row--mobile-flip">

      <div class="eight columns medium-down--one-whole">
        <div class="content-section--image-text-columns__image-wrapper">
          {{ section.settings.image | img_url: 'x500' | img_tag }}
        </div>
      </div>
  
      <div class="eight columns medium-down--one-whole">
        <div class="content-section--image-text-columns__text-wrapper">
          {% include "content-section.title" with {
            title: section.settings.title | escape,
          } %}
      
          <ol class="how-it-works-list">
            {% for block in section.blocks %}
              <li class="how-it-works-list__item">
                {{ block.settings.text }}
              </li>
            {% endfor %}
          </ol>
    
        </div>
      </div>

    </div>
  </div>
</div>
{% endcapture %}

{% schema %}
{
  "name": "Image/Text - How it works",
  "settings": [
    {
      "id": "title",
      "label": "Title",
      "type": "text",
      "default": "Image/Text Columns - How it works list"
    },
    {
      "id": "image",
      "label": "Image",
      "type": "image_picker"
    }
  ],
  "blocks": [
    {
      "type": "how_it_works_item",
      "name": "How it works item",
      "settings": [
        {
          "id": "text",
          "label": "Text",
          "type": "textarea"
        }
      ]
    }
  ]
}
{% endschema %}