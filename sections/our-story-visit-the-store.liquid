<div class="content-section content-section--our-story--visit-store">
  <div class="container">
    <div class="sixteen columns">
      {% include "content-section.title" with {
        title: section.settings.title | escape,
      } %}
    </div>
  </div>

  <div class="container">
    <div class="sixteen columns">
      <div class="our-story__store-map-wrapper">
        <img
          src="{{ section.settings.map_image | img_url : "2000x" }}"
        />
      </div>

      <div class="our-story__store-body">
        <p>
          We offer both walk-in and appointment-based shopping but give priority to appointments. You can book one below.
        </p>
        
        <h5>
          1411 34th Ave<br />
          Seattle, WA 98122<br/>
        </h5>
        <br/>
        
        <h4>
          Virtual Consultations
        </h4>

        <p>
          Thursday-Friday <strong>12pm-6pm</strong><br/>
          Saturday <strong>10am-4pm</strong>
        </p>

      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Visit Our Store",
  "settings": [
    {
      "id": "title",
      "label": "Title",
      "type": "text",
      "default": "Visit Our Store"
    },
    {
      "id": "map_image",
      "label": "Map Image",
      "type": "image_picker"
    },
    {
      "id": "mobile_map_image",
      "label": "Mobile Map Image",
      "type": "image_picker"
    }
  ]
}
{% endschema %}