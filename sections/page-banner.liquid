
{% assign align = "left" %}
{% if section.settings.is_centered %}
  {% assign align = "center" %}
{% endif %}

{% capture section_content %}
  <div class="container">
    <div class="row">
      <div class="one-whole columns">

        {% render "page-heading" with {
          title: section.settings.title,
          align: align,
        } %}
      
      </div>
    </div>
  </div>
{% endcapture %}

{% render "content-section" with {
  content: section_content,
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  color_region: section.settings.color_region
} %}

{% schema %}
{
  "name": "Page Heading",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "checkbox",
      "id": "is_centered",
      "label": "Is centered?",
      "default": false
    },
    {
      "type": "select",
      "id": "color_region",
      "label": "Color Region",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "light-alt",
          "label": "Light - alternative"
        },
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "dark-alt",
          "label": "Dark - alternative"
        }
      ]
    },
{
      "type": "select",
      "id": "padding_top",
      "label": "Top Padding (in spacing units)",
      "options": [
        {
          "value": "default",
          "label": "Default (5)"
        },
        {
          "value": "0",
          "label": "0"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "8",
          "label": "8"
        },
        {
          "value": "10",
          "label": "10"
        }
      ]
    },
    {
      "type": "select",
      "id": "padding_bottom",
      "label": "Bottom Padding (in spacing units)",
      "options": [
        {
          "value": "default",
          "label": "Default (5)"
        },
        {
          "value": "0",
          "label": "0"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "8",
          "label": "8"
        },
        {
          "value": "10",
          "label": "10"
        }
      ]
    }
  ]
}
{% endschema %}
