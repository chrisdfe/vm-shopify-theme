{% comment %}
title: text,
link_list: link_list,
show_view_all_link: checkbox,
view_all_url: text,
{% endcomment %}

<div class="mobile-menu-list-item mobile-menu-list-item--nav-link-list">

  {% if title %}
    <h4>{{ title }}</h4>
  {% endif %}

  {% if link_list %}
    <ul>
      {% for link in link_list.links %}
      <li>
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
      {% endfor %}
    </ul>
  {% endif %}

  {% if show_view_all_link and view_all_url %}
    <h6 class="u-margin-top-2"><a href="{{ view_all_url }}">View All</a></h6>
  {% endif %}

</div>