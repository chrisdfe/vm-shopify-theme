{% if with_accent == blank %}
  {% assign with_accent = false %}
{% endif %}

{% if with_banner_padding == blank %}
  {% assign with_banner_padding = false %}
{% endif %}

{% comment %}
<!-- temporarily disabling padded page headings -->
{% if with_banner_padding %}page-heading--padded{% endif %}
{% endcomment %}
<div class="page-heading
    {% if align == "center" %}page-heading--center{% endif %}
    {{ extra_classes }}
  ">
  <h1 class="page-heading__title
    {% if with_accent %}heading--with-accent{% endif %}">
    {{ title }}
  </h1>
</div>