<ul class="header-desktop__nav">
  {% for link in linklists[linklist].links %}
    {% assign is_dropdown = false %}
    {% if linklists[link.handle] != empty %}
      {% assign is_dropdown = true %}
    {% endif %}

    <li>
      <a
        href="{{ link.url }}"
        class="header-desktop__nav-link
        {% if link.active %}
          is-active
        {% endif %}"
        data-dropdown-rel="{{ link.handle | strip }}"
      >
        {{ link.title }}

        <div class="header-desktop__nav-link__dropdown-arrow">
          <span class="icon-down-arrow"></span>
        </div>
      </a>
    </li>
  {% endfor %}

  {{ extra_links }}
</ul>
