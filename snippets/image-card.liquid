{% capture link_content %}
  {% include "image-card.image" with { 
    image: image,
    title: title,
    url: url
  } %}

  {% include "image-card.title" with {
    title: title,
    title_tag: title_tag
  } %}
{% endcapture %}


<div class="image-card">
  {% if url != blank %}
    <a class="image-card__link" href="{{ url }}">
      {{ link_content }}
    </a>
  {% else %}
    {{ link_content }}
  {% endif %}

  <div class="image-card__content">    
    {{ card_content }}
  </div>
</div>
